<div class="jumbotron">
<div class="container">
<div class="well">
  <h1>Message Board</h1>
  <table>
    <thead>
      <tr>
        <h2>Posts:</h2>
        <th colspan="3"></th>
      </tr>
    </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="post"><%= post.user.first_name%>:  <%= post.content %></td>
      </tr>
      <tr>
        <td class="links">| <%= link_to 'Show', post %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> |</td> 

</div>
      </tr>
      <tr><td>|</td></tr>
    <% end %>
    <% if signed_in? %>
    <tr><td class="links"> <%= link_to 'New Post', new_post_path %></td></tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>
